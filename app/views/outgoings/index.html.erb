<div class="row">
  <div class="col-md-12">
    <%= link_to t('.new'), new_outgoing_path, class: 'pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

    <ul class="list">

      <li class="list-header">
        <div class="row">
          <div class="col-md-3">
            <%= "Dia" %>
          </div>
          <div class="col-md-3">
            <%= "Categoria" %>
          </div>
          <div class="col-md-3">
            <%= "Valor" %>
          </div>
        </div>
      </li>

      <% @outgoings.each do |outgoing| %>

        <li class="list-item">
          <div class="row">
            <div class="col-md-3">
              <%= l(outgoing.day) %>
            </div>
            <div class="col-md-3">
              <%= outgoing.category.name %>
            </div>
            <div class="col-md-3">
              <%= "R$#{number_with_precision(outgoing.value.to_f, precision: 2)}" %>
            </div>
            <div class="col-md-3">
              <%= link_to t('.edit'), edit_outgoing_path(outgoing), class: 'pull-right' %>
              <%= link_to t('.destroy'), outgoing_path(outgoing.id), method: :delete, class: 'pull-right' %>
            </div>
          </div>
        </li>

      <% end %>

    </ul>

  </div>
</div>
