<div class="form-container">

  <h1 class="form-title"><%= t('.title') %></h2>

  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

  <%= form_for @client, html: { class: 'form' } do |f| %>

    <%= f.hidden_field :user_id, value: @client.user_id %>

    <%= render 'form', f: f %>

    <div class="row form-commands">
      <div class="col-md-6">
        <%= link_to t('.cancel'), clients_url %>
      </div>
      <div class="col-md-6">
        <%= f.submit t('.update'), class: 'pull-right' %>
      </div>
    </div>

  <% end %>

</div>
