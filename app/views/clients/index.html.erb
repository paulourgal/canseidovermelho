<div class="row">
  <div class="col-md-12">
    <ol class='breadcrumb pull-left'>
      <li><a href="<%= sales_path %>"><%= t('layouts.application.home') %></a></li>
      <li class='active'><%= t('.title') %></li>
    </ol>
  </div>
</div>

<div class="list-new">
  <div class="row">
    <div class="col-md-12">
      <%= link_to t('.new'), new_client_path, class: 'pull-right' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

    <ul class="list">

      <% @clients.each do |client| %>

        <li class="list-item">
          <div class="row">
            <div class="col-md-5">
              <h2><%= client.name %></h2>
              <p><%= "#{client.phone} - #{client.email}" %></p>
              <p><%= client.address %></p>
            </div>
            <div class="col-md-5">
              <h3>Observações</h3>
              <p><%= client.observations %></p>
            </div>
            <div class="col-md-2">
              <%= link_to edit_client_path(client), class: 'pull-right margin-r-5' do %>
                <i class="fa fa-pencil-square-o" title="<%= t('.edit') %>"></i>
              <% end %>
              <%= link_to client_path(client.id), method: :delete, class: 'pull-right margin-r-5' do %>
                <i class="fa fa-trash-o" title="<%= t('.destroy') %>"></i>
              <% end %>
            </div>
          </div>
        </li>

      <% end %>

    </ul>

  </div>
</div>
