<div class="row">
  <div class="col-md-12">
    <%= link_to t('.new'), new_item_path, class: 'pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

    <ul class="list">

      <li class="list-header">
        <div class="row">
          <div class="col-md-2">
            <%= t('.status') %>
          </div>
          <div class="col-md-3">
            <%= t('.name') %>
          </div>
          <div class="col-md-2">
            <%= t('.cost_price') %>
          </div>
          <div class="col-md-2">
            <%= t('.sale_price') %>
          </div>
        </div>
      </li>

      <% @items.each do |item| %>

        <li class="list-item">
          <div class="row">
            <div class="col-md-2">
              <%= Item.status_str(item.status) %>
            </div>
            <div class="col-md-3">
              <%= item.name %>
            </div>
            <div class="col-md-2">
              <%= "R$#{number_with_precision(item.cost_price.to_f, precision: 2)}" %>
            </div>
            <div class="col-md-2">
              <%= "R$#{number_with_precision(item.unitary_price.to_f, precision: 2)}" %>
            </div>
            <div class="col-md-3">
              <%= link_to t('.edit'), edit_item_path(item), class: 'pull-right' %>
              <%= link_to t('.destroy'), item_path(item.id), method: :delete, class: 'pull-right' %>
            </div>
          </div>
        </li>

      <% end %>

    </ul>

  </div>
</div>
